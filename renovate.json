{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "renovate/renovate-config"
  ],
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "automerge": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update _VERSION variables in Dockerfiles",
      "fileMatch": ["(^|/|\\.)Dockerfile$", "(^|/)Dockerfile\\.[^/]*$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-.]+?) depName=(?<depName>[^\\s]+?)(?: (lookupName|packageName)=(?<packageName>[^\\s]+?))?(?: versioning=(?<versioning>[^\\s]+?))?(?: extractVersion=(?<extractVersion>[^\\s]+?))?(?: registryUrl=(?<registryUrl>[^\\s]+?))?\\s(?:ENV|ARG)\\s+[A-Za-z0-9_]+?_VERSION[ =][\"']?(?<currentValue>.+?)[\"']?\\s"
      ]
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["/Dockerfile$"],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "ARG BUILD_FROM=(?<depName>.*?):(?<currentValue>.*?)\\s+"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": ["/.gitpod.Dockerfile$"],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "ARG BUILD_FROM=(?<depName>.*?):(?<currentValue>.*?)\\s+"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": ["Dockerfile"],
      "matchStrings": ["EASY_ADD_VERSION=(?<currentValue>.*?)\\s+"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "itzg/easy-add"
    },
    {
      "fileMatch": ["Dockerfile"],
      "matchStrings": ["ENTRYPOINT_DEMOTER_VERSION=(?<currentValue>.*?)?\\s"],
      "extractVersionTemplate": "^v(?<version>.*)$",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "itzg/entrypoint-demoter"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["repology"],
      "automerge": true
    },
    {
      "groupName": "Docker Base Image",
      "matchDepTypes": ["itzg/easy-add"],
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "groupName": "Add-on base image",
      "matchDatasources": ["docker"]
    },
    {
      "groupName": "Add-on base image",
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchDepTypes": ["itzg/easy-add"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchDatasources": ["github-releases"],
      "automerge": true
    },
    {
      "matchDepTypes": ["itzg/entrypoint-demoter"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchDatasources": ["github-releases"],
      "automerge": true
    },
    {
      "matchPackagePatterns": ["itzg"],
      "groupName": "itzg"
    }
  ]
}
